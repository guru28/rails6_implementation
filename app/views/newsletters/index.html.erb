<p id="notice"><%= notice %></p>

<h1>Listing newsletters</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>From Address</th>
      <th colspan="3"></th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @newsletters.each do |newsletter| %>
    <div class="newsletter_wrapper">
      <tr>
        <td><%= newsletter.subject %></td>
        <td><%= newsletter.from_address %></td>
        <td><%= link_to 'Show', newsletter %></td>
        <td><%= link_to 'Edit', edit_newsletter_path(newsletter) %></td>
        <td><%= link_to 'Destroy', newsletter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'send_newsletter', newsletters_send_email_path(newsletter), method: :post, data: {confirm: 'It will send email to every one'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New newsletter', new_newsletter_path %>
