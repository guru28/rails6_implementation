
<p>
  <strong>Title:</strong>
  <%= @newsletter.subject %>
</p>

<p class="date">
   submitted <%= time_ago_in_words(@newsletter.created_at) %> Ago
</p>

<p>
  <strong>content:</strong>
  <%= @newsletter.content %>
</p>


 
<%= link_to 'Edit', edit_newsletter_path(@newsletter) %> |
<%= link_to 'Back', newsletters_path %>

<p>
  <strong>comments:</strong>
</p>
<p>
  <% @newsletter.comments.each do |msg| %>
  <p>
  	<strong><%= msg.subcriber.email %>:</strong>

  	<%= msg.body %>
  </p>
  <% end %>
</p>